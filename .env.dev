# =============================================================================
# TREASURE HUNT APPLICATION - DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables for the DEV profile
# Used for local development and staging environments
# =============================================================================

# =============================================================================
# SPRING PROFILE CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL/MySQL for Development)
# =============================================================================
# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=treasure_hunt_dev
DB_USERNAME=treasure_hunt_user
DB_PASSWORD=dev_password_placeholder

# Connection Pool Settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30000

# =============================================================================
# EMAIL CONFIGURATION (Real SMTP for Development)
# =============================================================================
# Gmail SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-dev-email@gmail.com
MAIL_PASSWORD=your_app_password_placeholder

# Email Addresses
MAIL_FROM_ADDRESS=noreply@treasurehunt-dev.local
MAIL_FROM_NAME=Treasure Hunt Development
MAIL_SUPPORT_ADDRESS=support@treasurehunt-dev.local

# Company Information
COMPANY_NAME=Treasure Hunt Adventures (Dev)

# =============================================================================
# ADMIN SECURITY CONFIGURATION
# =============================================================================
# Admin Panel Credentials (Use strong passwords)
ADMIN_USERNAME=dev_admin
ADMIN_PASSWORD=dev_admin_secure_password_123!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_TREASUREHUNT=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=WARN
LOGGING_LEVEL_ORG_HIBERNATE=WARN

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# File upload paths
FILE_UPLOAD_DIR=uploads
FILE_MAX_SIZE=10MB
FILE_MAX_REQUEST_SIZE=50MB

# Cloud Storage (if using AWS S3, etc.)
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_BUCKET=treasure-hunt-dev-bucket
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your_access_key_placeholder
CLOUD_STORAGE_SECRET_KEY=your_secret_key_placeholder

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration (if using Redis)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_placeholder

# Cache settings
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# JWT Configuration (if implementing JWT)
JWT_SECRET=dev_jwt_secret_key_placeholder_change_in_production
JWT_EXPIRATION=86400

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================
# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_INTERVAL=300

# Health check endpoints
HEALTH_CHECK_ENABLED=true

# =============================================================================
# EMAIL QUEUE CONFIGURATION
# =============================================================================
# Email processing settings
EMAIL_QUEUE_BATCH_SIZE=20
EMAIL_RETRY_MAX_ATTEMPTS=3
EMAIL_PROCESSING_INTERVAL=30

# =============================================================================
# EXTERNAL SERVICES (Development/Staging)
# =============================================================================
# Payment Gateway (Sandbox Mode)
PAYMENT_GATEWAY_URL=https://api.sandbox-payment.com
PAYMENT_GATEWAY_KEY=sandbox_key_placeholder
PAYMENT_GATEWAY_SECRET=sandbox_secret_placeholder

# SMS Service (Development)
SMS_SERVICE_URL=https://api.dev-sms.com
SMS_SERVICE_KEY=dev_sms_key_placeholder

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_placeholder

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles for development
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_ANALYTICS=true
FEATURE_DEBUG_MODE=true

# =============================================================================
# DEVELOPMENT-SPECIFIC CONFIGURATION
# =============================================================================
# Development tools
DEV_TOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true

# Sample data
SAMPLE_DATA_ENABLED=true
SAMPLE_PLANS_COUNT=10
SAMPLE_USERS_COUNT=5

# Mock services (set to false for real services)
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
MOCK_PAYMENT_SERVICE=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# API Documentation
API_DOCS_ENABLED=true
SWAGGER_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================
# 1. This file is for DEVELOPMENT environment only
# 2. Replace placeholder values with actual development credentials
# 3. Do not commit real credentials to version control
# 4. Use environment-specific values for each deployment
# 5. Consider using Docker secrets or Kubernetes secrets for sensitive data
# =============================================================================
